# ============================================================
# Oracle Cloud VM Auto-Register Configuration
# ============================================================
# Copy this file to .env and fill in your values
# ============================================================

# ------------------------------------------------------------
# ORACLE CLOUD CREDENTIALS
# Get these from: https://cloud.oracle.com/identity/domains/my-profile/api-keys
# ------------------------------------------------------------

# Your User OCID (found in Profile > My profile)
OCI_USER_OCID=ocid1.user.oc1..aaaaaaaaxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Your Tenancy OCID (found in Profile > Tenancy)
OCI_TENANCY_OCID=ocid1.tenancy.oc1..aaaaaaaaxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# API Key Fingerprint (shown after uploading public key)
OCI_FINGERPRINT=xx:xx:xx:xx:xx:xx:xx:xx:xx:xx:xx:xx:xx:xx:xx:xx

# Path to your OCI API private key file
OCI_PRIVATE_KEY_PATH=./oci_private_key.pem

# Oracle Cloud Region (Singapore = ap-singapore-1)
# See all regions: https://docs.oracle.com/en-us/iaas/Content/General/Concepts/regions.htm
OCI_REGION=ap-singapore-1

# ------------------------------------------------------------
# INSTANCE CONFIGURATION
# ------------------------------------------------------------

# Compartment OCID (found in Identity > Compartments)
OCI_COMPARTMENT_OCID=ocid1.compartment.oc1..aaaaaaaaxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Subnet OCID (found in Networking > Virtual Cloud Networks > Your VCN > Subnets)
OCI_SUBNET_OCID=ocid1.subnet.oc1.ap-singapore-1.aaaaaaaaxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Image OCID for your desired OS
# Find images: https://docs.oracle.com/en-us/iaas/images/
# Oracle Linux 8 (aarch64): ocid1.image.oc1.ap-singapore-1.aaaaaaaaxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
# Ubuntu 22.04 (aarch64): ocid1.image.oc1.ap-singapore-1.aaaaaaaaxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
OCI_IMAGE_OCID=ocid1.image.oc1.ap-singapore-1.aaaaaaaaxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Availability Domain name
# Find yours at: https://cloud.oracle.com/compute/instances/create (check the dropdown)
# Usually format: XXXX:AP-SINGAPORE-1-AD-1
OCI_AVAILABILITY_DOMAIN=xxxx:AP-SINGAPORE-1-AD-1

# Instance display name
OCI_INSTANCE_NAME=free-arm-instance

# Number of OCPUs (max 4 for free tier)
OCI_OCPUS=4

# Memory in GB (max 24 for free tier)
OCI_MEMORY_GB=24

# Your SSH public key (for accessing the instance)
# Generate with: ssh-keygen -t rsa -b 4096
OCI_SSH_PUBLIC_KEY=ssh-rsa AAAAB3NzaC1yc2EAAAADAQABAAAB... your-email@example.com

# ------------------------------------------------------------
# TELEGRAM NOTIFICATION
# ------------------------------------------------------------

# Bot Token from @BotFather
# Create bot: https://t.me/BotFather
TELEGRAM_BOT_TOKEN=123456789:ABCdefGHIjklMNOpqrsTUVwxyz

# Your Chat ID
# Get it: https://t.me/userinfobot (send /start)
TELEGRAM_CHAT_ID=123456789

# ------------------------------------------------------------
# RETRY CONFIGURATION
# ------------------------------------------------------------

# Seconds between retry attempts (recommended: 60)
RETRY_INTERVAL_SECONDS=60
